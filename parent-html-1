    <h1>Kubernetes Dashboard Selection</h1>

    <button onclick="navigateToDashboard('devops')">DevOps Dashboard</button>
    <button onclick="navigateToDashboard('developer')">Developer Dashboard</button>

    <script>
        function navigateToDashboard(dashboardType) {
            if (dashboardType === 'devops') {
                window.location.href = 'devops-dashboard.html';
            } else if (dashboardType === 'developer') {
                window.location.href = 'developer-dashboard.html';
            }
        }
    </script>

