        }

        button {
            background-color: #fff; /* White Background for Buttons */
            color: #3498db; /* Heading Color for Button Text */
            padding: 10px;
            margin: 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #ecf0f5; /* Light Blue-Gray Hover Background for Buttons */
        }

        #namespaceContainer {
            display: none;
            margin-top: 20px;
        }

        label {
            display: block;
            margin: 10px 0;
            font-weight: bold;
            color: #fff; /* White Text for Label */
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            box-sizing: border-box;
        }

        #submitBtn {
            background-color: #fff; /* White Background for Submit Button */
            color: #3498db; /* Heading Color for Submit Button Text */
            padding: 10px;
            border: none;
            border-radius: 4px;
